@{
    ViewBag.Title = "Home Page";
}
<main>
<section class="row" aria-labelledby="aspnetTitle">
    <h1 id="title">ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
</section>

@Html.ActionLink("Go to Contact", "Contact", "Home", new { @class = "btn btn-primary" })

@Html.ActionLink("About", "About", "Home")

<a href="@Url.Action("View", "Controller")">Read More</a>

@using (Html.BeginForm("About", "Home", FormMethod.Post))
{
    @Html.Label("ENTER YOUR NAME")
    @Html.TextBox("name", null, new { @class = "form-control", placeholder = "Your name", @required = "true" })

    @Html.Label("ENTER YOUR EMAIL ")
    @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Your email", type = "email" })

    @Html.Label("ENTER YOUR PASSWORD")
    @Html.Password("password", null, new { @class = "form-control", placeholder = "Your password", @required = true })

    @Html.RadioButton("gender", "Male", false, new { id = "gender1" }) <span>Male</span>
    @Html.RadioButton("gender", "female", false, new { id = "gender2" }) <span>Female</span>
    <br />

    @Html.Label("Select your City", new { @class = "form-label" })
    @Html.DropDownList("city", new SelectList(new[] { "Karachi", "Hyderabad", "Sukkhur", "Larkana" }), "Select your city", new { @class = "form-select" })
}

    <button>Submit</button>

    </main>

}
